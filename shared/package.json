{
  "name": "@quantflow/shared",
  "version": "1.0.0",
  "description": "Shared types and parser for QuantFlow trading system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:grammar && npm run build:ts && npm run build:copy",
    "build:grammar": "nearleyc src/parser/simple-grammar.ne -o src/parser/simple-grammar.js",
    "build:ts": "tsc",
    "build:copy": "cp src/parser/simple-grammar.js dist/parser/simple-grammar.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "dev": "tsc --watch"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "trading",
    "quantitative",
    "pine-script",
    "dsl",
    "parser"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "moo": "^0.5.2",
    "nearley": "^2.20.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/nearley": "^2.11.5",
    "jest": "^29.7.0",
    "typescript": "^5.9.2"
  }
}
